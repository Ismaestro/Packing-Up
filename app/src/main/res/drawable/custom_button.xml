<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/greyDark" />

            <stroke android:width="3dp" android:color="@color/greyStroke" />

            <corners android:radius="7dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/white" />

            <stroke android:width="3dp" android:color="@color/greyStroke" />

            <corners android:radius="7dp" />
        </shape></item>

</selector>